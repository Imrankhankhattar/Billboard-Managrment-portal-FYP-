
<head>
    <link href="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
    <script src="//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
</head>


<body>
  <div class="tnavbar">
  <div class="tlogo">
      <%= image_tag('1.png', :class => "logoimg") %>
      <h3 class="title"> Out of Home</h3>
  </div>
  
  <div>
  <% if @user %>
    <%= button_to "Logout" , logout_path,method: :delete %>
<% end %>  
  </div>
</div>
  



  
<div class="dash-content-payment">



   <div class="col-md-9 offset-md-3 payment-card">
                    <span class="anchor" id="formPayment"></span>
                    <%# <hr class="my-5"> %>

                    <!-- form card cc payment -->
                    <div class="card card-outline-secondary">
                        <div class="card-body">
                            <h3 class="text-center">Upload Payment Details</h3>
                            <hr>
                            <%= form_with model: @BoardPayment,url:pay_path, local: true do |form|%>
                                <%= form.hidden_field :client_board_id ,:value=>(@booking_id) %>
                                
                                <div class="form-group">
                                    <label for="cc_bank">Bank</label>
                                    <%= form.select :bank_name, ['Allied Bank', 'HBL','MCB','BOP',Easypaisa, Jazzcash],{ include_blank: "Select Bank" }, { class: 'form-control' }%>
                                </div>
                                <div class="form-group">
                                    <label for="cc_name">Account Name</label>
                                    <%= form.text_field :account_name ,class: "form-control",required: true,maxlength:"50" %>
                                </div>
                                <div class="form-group">
                                    <label>Account Number</label>
                                    <%= form.text_field :account_number ,class: "form-control",required: true,maxlength:"20" %>
                                </div>
                                <div class="form-group row">
                                    <div class="col-md-4">
                                        <div class="book-fields"><%= form.label :startdate_datepicker, "Payment Date" %>
                                        <%= form.date_field :payment_date, "data-provide" => 'datepicker' %></div>
                                    </div>
                                    <div class="col-md-4">

                                    </div>
                                    <div class="col-md-4">

                                    </div>
                                </div>
                                <div class="row">
                                    <label class="col-md-12">Amount</label>
                                </div>
                                <div class="form-inline">
                                    <div class="input-group">
                                        <div class="input-group-prepend"><span class="input-group-text">pkr</span></div>
                                        <%= form.text_field :amount ,class:"form-control text-right",required: true,maxlength:"20",placeholder:"3900" %>
                                        <div class="input-group-append"><span class="input-group-text">.00</span></div>
                                    </div>
                                </div>
                                
                                <div class="image">
                                    <div><label for="">Upload Payment Slip</label></div>
                                    
                                    <%= form.file_field :payment_slip, accept: "image/png,image/jpeg,image/jpg", class:"upload-icon"%>
                                </div>
                                <hr>
                                <div class="form-group row">
                                    <div class="col-md-6">
                                        <%= link_to "Back",pending_path ,class:"btn btn-primary next" %>
                                    </div>
                                    <div class="col-md-6">
                                        <button type="submit" class="btn btn-success next">Submit</button>
                                    </div>
                                </div>
                            <%end%>
                        </div>
                    </div>

                                


</div>
</body>

